<Window x:Class="Frontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IIS Frontend" Height="600" Width="800">
    <Grid>
        <TabControl SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Authentication">
                <StackPanel Margin="20">
                    <TextBlock Text="Username:" />
                    <TextBox x:Name="UsernameBox" Width="200" Margin="0,5"/>

                    <TextBlock Text="Password:" Margin="0,10,0,0"/>
                    <PasswordBox x:Name="PasswordBox" Width="200" Margin="0,5"/>

                    <StackPanel Orientation="Horizontal" Margin="0,10">
                        <Button Content="Register" Width="100" Margin="0,0,10,0" Click="Register_Click"/>
                        <Button Content="Login" Width="100" Click="Login_Click"/>
                    </StackPanel>

                    <TextBlock x:Name="AuthStatusText" Margin="0,15" Foreground="DarkGreen"/>
                </StackPanel>
            </TabItem>

            <TabItem Header="Upload (XSD / RNG)">
                <StackPanel Margin="20">
                    <TextBlock Text="LinkedIn Profile URL:" />
                    <TextBox x:Name="ProfileUrlBox" Width="400" Margin="0,5"/>

                    <TextBlock Text="Choose Validation Type:" Margin="0,10,0,0"/>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton x:Name="XsdRadio" Content="XSD" IsChecked="True" Margin="0,0,10,0"/>
                        <RadioButton x:Name="RngRadio" Content="RNG"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                        <Button Content="Upload and Validate" Width="140" Click="ValidateUpload_Click"/>
                        <Button Content="Clear" Width="80" Margin="10,0,0,0" Click="ClearUploadForm_Click"/>
                    </StackPanel>

                    <TextBlock x:Name="UploadResultText" Margin="0,15,0,0" Foreground="DarkGreen"/>
                </StackPanel>
            </TabItem>

            <TabItem Header="Search Profiles">
                <StackPanel Margin="20">
                    <TextBlock Text="Enter keyword to search:" />
                    <TextBox x:Name="SearchKeywordBox" Width="300" Margin="0,5"/>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="Search" Width="100" Margin="0,0,10,0" Click="SearchSoap_Click"/>
                        <Button Content="Clear" Width="80" Click="ClearSoapSearch_Click"/>
                    </StackPanel>

                    <ListBox x:Name="SoapResultsBox" Margin="0,10,0,0" Height="200"
             SelectionChanged="SoapResultsBox_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding FirstName}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding LastName}" />
                                    <TextBlock Text="{Binding TitleV2}" Foreground="Gray" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock Text="Selected Profile as XML:" Margin="0,10,0,0"/>
                    <TextBox x:Name="XmlPreviewBox" Height="150" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </TabItem>

            <TabItem x:Name="CrudTab" Header="Manage Profiles">
                <StackPanel Margin="20">
                    <TextBlock Text="Manage Your Custom Profiles (JWT Required)" FontWeight="Bold" />

                    <ListBox x:Name="CrudProfileList" Margin="0,10,0,10" Height="200"
                 SelectionChanged="CrudProfileList_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding FirstName}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding LastName}" />
                                    <TextBlock Text="{Binding PublicIdentifier}" FontStyle="Italic" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock Text="First Name:"/>
                    <TextBox x:Name="CrudFirstNameBox"/>

                    <TextBlock Text="Last Name:"/>
                    <TextBox x:Name="CrudLastNameBox"/>

                    <TextBlock Text="Public Identifier:"/>
                    <TextBox x:Name="CrudPublicIdBox" IsReadOnly="True"/>

                    <TextBlock Text="Title:"/>
                    <TextBox x:Name="CrudTitleBox"/>

                    <TextBlock Text="Subtitle:"/>
                    <TextBox x:Name="CrudSubtitleBox"/>

                    <StackPanel Orientation="Horizontal" Margin="0,10">
                        <Button Content="Create" Width="80" Margin="0,0,10,0" Click="CreateProfile_Click"/>
                        <Button Content="Update" Width="80" Margin="0,0,10,0" Click="UpdateProfile_Click"/>
                        <Button Content="Delete" Width="80" Margin="0,0,10,0" Click="DeleteProfile_Click"/>
                        <Button Content="Clear" Width="80" Click="ClearCrudForm_Click"/>
                    </StackPanel>

                    <TextBlock x:Name="CrudStatusText" Foreground="DarkGreen" Margin="0,10,0,0"/>
                </StackPanel>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
